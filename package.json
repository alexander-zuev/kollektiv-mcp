{
  "name": "kollektiv-mcp",
  "version": "0.1.0",
  "description": "Kollektiv MCP - RAG over your private files. Built on top of Cloudflare AutoRAG.",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": "please-use-pnpm"
  },
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "compile": "npx @tailwindcss/cli -i ./src/shared/styles/globals.css -o ./public/styles.css --minify",
    "deploy": "npx @tailwindcss/cli -i ./src/shared/styles/globals.css -o ./public/styles.css --minify && pnpm cf-typegen && wrangler deploy",
    "deploy:dry": "wrangler deploy --dry-run --outdir dist",
    "dev": "wrangler types && vite",
    "build": "vite build",
    "test": "vitest run --coverage",
    "format": "biome format --write",
    "lint:fix": "biome lint --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "check:fix:unsafe": "biome check --write --unsafe",
    "start": "wrangler types && wrangler dev",
    "cf-typegen": "wrangler types",
    "test:hooks": "vitest run --silent --reporter=dot --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "logs": "wrangler tail --env prod --sampling-rate=none --format=pretty"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@cloudflare/vite-plugin": "^1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.53",
    "@cloudflare/workers-types": "^4.20250715.0",
    "@storybook/html": "^9.0.16",
    "@storybook/html-vite": "^9.0.16",
    "@tailwindcss/cli": "^4.1.11",
    "@tanstack/router-plugin": "^1.127.8",
    "@types/node": "^24.0.14",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-istanbul": "~3.2.4",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "6.0.0-rc1",
    "lint-staged": "^16.1.2",
    "marked": "^16.0.0",
    "storybook": "^9.0.16",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "~3.2.4",
    "wrangler": "^4.24.3"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.5",
    "@modelcontextprotocol/sdk": "1.12.1",
    "@radix-ui/colors": "^3.0.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.51.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-router": "^1.127.8",
    "@tanstack/zod-adapter": "^1.127.8",
    "agents": "^0.0.105",
    "ajv": "^8.17.1",
    "camelcase-keys": "^9.1.3",
    "cloudflare": "^4.4.1",
    "hono": "^4.8.5",
    "nitro-cloudflare-dev": "^0.2.2",
    "snakecase-keys": "^9.0.2",
    "vite": "^6.3.4",
    "workers-mcp": "^0.0.13",
    "zod": "^4.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
      "pnpx biome check --write --no-errors-on-unmatched"
    ]
  }
}