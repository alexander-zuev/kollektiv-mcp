    "tailwindcss": "^4.1.4",
    "tailwindcss-animate": "^1.0.7",
    "typed.js": "^2.1.0",
    "vaul": "^1.1.2",
    "vite": "^6.3.4",
    "workers-mcp": "^0.0.13",
    "zod": "^4.0.5",
    "zod-validation-error": "^3.5.3",
    "zustand": "^5.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
