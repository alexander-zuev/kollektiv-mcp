{
	"name": "kollektiv-mcp",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"deploy": "npx @tailwindcss/cli -i ./src/styles.css -o ./public/styles.css --minify && wrangler types && wrangler deploy --env prod",
		"deploy:dry": "wrangler deploy --dry-run --outdir dist",
		"dev": "wrangler types && wrangler dev",
		"format": "biome format --write",
		"lint:fix": "biome lint --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"check:fix:unsafe": "biome check --write --unsafe",
		"start": "wrangler types && wrangler dev",
		"cf-typegen": "wrangler types",
		"test": "vitest run",
		"test:hooks": "vitest run --silent --reporter=dot --coverage",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:e2e": "vitest run tests/e2e",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vitest-pool-workers": "^0.8.24",
		"@cloudflare/workers-types": "^4.20250420.0",
		"@storybook/html": "^8.6.12",
		"@storybook/html-vite": "^8.6.12",
		"@tailwindcss/cli": "^4.1.5",
		"@types/node": "^22.14.1",
		"@vitest/coverage-istanbul": "^3.1.2",
		"lint-staged": "^15.5.1",
		"marked": "^15.0.7",
		"storybook": "^8.6.12",
		"tailwindcss": "^4.1.5",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.5.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.2",
		"wrangler": "^4.12.0"
	},
	"dependencies": {
		"@cloudflare/workers-oauth-provider": "^0.0.5",
		"@modelcontextprotocol/sdk": "^1.10.2",
		"@radix-ui/colors": "^3.0.0",
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.49.4",
		"agents": "^0.0.76",
		"camelcase-keys": "^9.1.3",
		"hono": "^4.7.4",
		"snakecase-keys": "^8.0.1",
		"vite": "^6.3.4",
		"workers-mcp": "^0.0.13",
		"zod": "^3.24.2"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mjs,cjs,json}": ["npx biome check --write --no-errors-on-unmatched"]
	}
}
