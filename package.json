{
  "name": "kollektiv-mcp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler types && wrangler deploy",
    "deploy:dry": "wrangler deploy --dry-run --outdir dist",
    "dev": "wrangler dev",
    "format": "biome format --write",
    "lint:fix": "biome lint --write",
    "check": "biome check --write",
    "start": "wrangler types && wrangler dev --env dev",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:husky": "vitest run --silent --reporter=dot",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.18",
    "@cloudflare/workers-types": "^4.20250420.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "marked": "^15.0.7",
    "typescript": "^5.5.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "~3.0.0",
    "workers-mcp": "^0.1.0-3",
    "wrangler": "^4.12.0"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.2",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.4",
    "@types/node": "^22.14.1",
    "agents": "^0.0.53",
    "camelcase-keys": "^9.1.3",
    "hono": "^4.7.4",
    "snakecase-keys": "^8.0.1",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
      "npx biome check --write --no-errors-on-unmatched"
    ]
  }
}