{
  "compilerOptions": {
    /* Bundler mode */
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/react-spa/*"
      ],
      "@/worker/*": [
        "./src/worker/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/tests/*": [
        "./tests/*"
      ]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.react.json"
    },
    {
      "path": "./tsconfig.worker.json"
    }
  ]
}