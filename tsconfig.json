{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"jsx": "react-jsx",
		"module": "es2022",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		}
	},
	"include": ["worker-configuration.d.ts", "src/**/*.ts", "tests/**/*.ts"]
}
