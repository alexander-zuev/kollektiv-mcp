{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["../src/*"]
		},
		"types": [
			"@cloudflare/vitest-pool-workers"
			// provides `cloudflare:test` types
		],
